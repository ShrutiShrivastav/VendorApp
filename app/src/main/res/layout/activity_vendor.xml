<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".VendorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Vendor"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="#8F8989"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="104dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="All Items"
                android:textSize="15sp"

                android:layout_marginStart="34dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:background="@drawable/bg3"
                android:textColor="#8F8989"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="34dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Out of stock"

                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/bg4"
                android:textColor="#000"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:textColor="#8F8989"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="104dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
             android:background="@drawable/bg7"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="13dp">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:id="@+id/upload1"
                    android:text="Upload"
                    android:background="@drawable/bg5"
                    android:layout_marginTop="30dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/bg7"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="Upload"
                    android:id="@+id/upload2"
                    android:background="@drawable/bg5"
                    android:layout_marginTop="30dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg7">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="Upload"
                    android:id="@+id/upload3"
                    android:background="@drawable/bg5"
                    android:layout_marginTop="30dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:stretchColumns="1">

       <TableRow >

           <TextView
               android:layout_width="79dp"
               android:layout_height="25dp"
               android:layout_marginStart="25dp"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="20dp"
               android:text="Category"
               android:textColor="#64A7DC"
               android:textSize="14sp" />
           <EditText
               android:text="Fruits and Vegetables"
                android:paddingLeft="10dp"
               android:layout_height="32dp"
               android:layout_marginTop="20dp"
               android:layout_marginStart="25dp"
               android:background="@drawable/bg5"
               android:textSize="14sp"
               android:layout_marginLeft="25dp" />
       </TableRow>

            <TableRow >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="Product Name"
                    android:textColor="#64A7DC"
                    android:textSize="14sp" />
                <EditText

                    android:layout_height="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/bg5"
                    android:textSize="14sp"
                    android:layout_marginLeft="25dp" />
            </TableRow>

            <TableRow >
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:text="GST Amount"
                    android:textSize="14sp"
                    android:textColor="#64A7DC"
                    android:layout_marginLeft="25dp" />
                <EditText

                    android:layout_height="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/bg5"
                    android:textSize="14sp"
                    android:layout_marginLeft="25dp" />
            </TableRow>

            <TableRow >
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:text="Price Amount"
                    android:textSize="14sp"
                    android:textColor="#64A7DC"
                    android:layout_marginLeft="25dp" />
                <EditText

                    android:layout_height="32dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg5"
                    android:layout_marginStart="25dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="25dp" />
            </TableRow>

            <TableRow >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="Delivery Charge"
                    android:textColor="#64A7DC"
                    android:textSize="14sp" />
                <EditText

                    android:layout_height="32dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg5"
                    android:layout_marginStart="25dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="25dp" />
            </TableRow>
            <TableRow >
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="25dp"

                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:text="Offer(%)"
                    android:textSize="14sp"
                    android:textColor="#64A7DC"
                    android:layout_marginLeft="25dp" />
                <EditText

                    android:layout_height="32dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg5"
                    android:layout_marginStart="25dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="25dp" />
            </TableRow>
        </TableLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:id="@+id/finalupload"
            android:layout_marginBottom="26dp"
            android:text="Upload"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:background="@drawable/bg2"
            />

    </LinearLayout>




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/white"
            app:tabTextColor="#8F8989"
            app:tabSelectedTextColor="#000"
            app:tabIndicatorColor="#64A7DC"
            android:layout_alignParentBottom="true"
            app:tabIndicatorHeight="5dp"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</RelativeLayout>

</LinearLayout>